# Module: postgresql
# Docs: https://www.elastic.co/guide/en/beats/metricbeat/7.5/metricbeat-module-postgresql.html
{% set module_name = "postgresql" %}

{% for config in module_config %}
- module: {{ module_name }}
  period: {{ config.period }}
{# Metricsets #}
  metricsets:
{% for metricset in config.metricsets %}
    - {{ metricset }}
{% endfor %}
{# Hosts #}
  hosts:
{% for host in config.hosts %}
    - {{ host }}
{% endfor %}
{# Username #}
{% if config.username is defined %}
  username: {{ config.username }}
{% endif %}
{# Password #}
{% if config.password is defined %}
  password: {{ config.password }}
{% endif %}

{% endfor %}