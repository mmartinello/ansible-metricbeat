# Module: system
# Docs: https://www.elastic.co/guide/en/beats/metricbeat/7.5/metricbeat-module-system.html
{% set module_name = "system" %}

{% if metricbeat_modules[module_name].enabled == true %}
{% for config in metricbeat_modules[module_name].config %}
- module: {{ module_name }}
  period: {{ config.period }}
  metricsets:
{% for metricset in config.metricsets %}
  - {{ metricset }}
{% endfor %}
{% for k, v in config.extra.items() %}
  {{ k }} - {{ v }}
{% endfor %}

{% endfor %}
{% endif %}


- module: system
  period: 10s
  metricsets:
    - cpu
    - load
    - memory
    - network
    - process
    - process_summary
    - socket_summary
    #- entropy
    #- core
    #- diskio
    #- socket
  process.include_top_n:
    by_cpu: 5      # include top 5 processes by CPU
    by_memory: 5   # include top 5 processes by memory

- module: system
  period: 1m
  metricsets:
    - filesystem
    - fsstat
  processors:
  - drop_event.when.regexp:
      system.filesystem.mount_point: '^/(sys|cgroup|proc|dev|etc|host|lib)($|/)'

- module: system
  period: 15m
  metricsets:
    - uptime

